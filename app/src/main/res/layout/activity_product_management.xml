<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProductManagement">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBackList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:padding="4dp"
            app:srcCompat="@drawable/arrow"
            tools:srcCompat="@drawable/arrow" />

        <TextView
            android:id="@+id/txtPay"
            style="@style/textStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Thêm sản phẩm"
            android:textAlignment="center"
            android:textColor="@color/blue_grey"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="133dp"
        android:layout_height="23dp"
        android:layout_marginTop="20dp"
        android:text="Tên sản phẩm:"
        android:textSize="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <EditText
        android:id="@+id/edtName"
        android:layout_width="274dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">
    </EditText>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="133dp"
        android:layout_height="23dp"
        android:layout_marginTop="60dp"
        android:text="Giá:"
        android:textSize="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <EditText
        android:id="@+id/edtprice"
        android:layout_width="274dp"
        android:layout_height="50dp"
        android:layout_marginTop="84dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView15"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">
    </EditText>

    <TextView
        android:id="@+id/textView16"
        android:layout_width="133dp"
        android:layout_height="23dp"
        android:layout_marginTop="36dp"
        android:text="Sản phẩm:"
        android:textSize="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <EditText
        android:id="@+id/edtListPr"
        android:layout_width="274dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="144dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView16"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"></EditText>

    <TextView
        android:id="@+id/textView17"
        android:layout_width="203dp"
        android:layout_height="26dp"
        android:layout_marginTop="40dp"
        android:text="Mô tả sản phẩm:"
        android:textSize="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <EditText
        android:id="@+id/edtDetail"
        android:layout_width="409dp"
        android:layout_height="61dp"
        android:layout_marginTop="260dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0"></EditText>

    <TextView
        android:id="@+id/textView18"
        android:layout_width="133dp"
        android:layout_height="23dp"

        android:layout_marginTop="28dp"
        android:text="Ảnh sản phẩm:"
        android:textSize="19dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtDetail" />

    <Button
        android:id="@+id/btnUpImage"
        android:layout_width="161dp"
        android:layout_height="46dp"
        android:layout_marginTop="76dp"
        android:hint="Thêm hình ảnh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.064"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtDetail">

    </Button>

    <ImageView
        android:id="@+id/imageViewPro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="53dp"
        android:layout_marginTop="28dp"
        app:layout_constraintBottom_toTopOf="@+id/btnUpLoad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.094"
        app:layout_constraintStart_toEndOf="@+id/btnUpImage"
        app:layout_constraintTop_toBottomOf="@+id/edtDetail"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnUpLoad"
        android:layout_width="161dp"
        android:layout_height="46dp"
        android:layout_marginTop="208dp"
        android:hint="Tải lên"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtDetail">

    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>